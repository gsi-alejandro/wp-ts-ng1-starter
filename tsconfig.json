{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jquery",
      "angular",
      "angular-mocks",
      "angular-ui-router",
      "bootstrap",
      "hammerjs",
      "jest"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}